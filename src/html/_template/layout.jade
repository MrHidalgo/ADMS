- var atmSlogan = 'In the global air traffic management (ATM) system environment envisioned by the operational concept, aeronautical information service (AIS) would become one of the most valuable and important enabling services';
- var ebsSlogan = 'EBS -THE KEY TO SAVE YOUR MONEY';

    section#main-content

        // HEADER [navigation, video]
        header#header.header
            // video section
            section.header-video
                include video

            // navigation section
            section.header-navigation
                include nav

            section.header-btn-video
                a(href='#about', class='header-btn-skip', onclick='pauseVideo()') Skip Video

        // ABOUT [why ADMS...]
        block about
            include about

        // PHILOSOPHY [flags, map]
        block philosophy
            include philosophy

        // PRODUCT [products philosophy]
        block product
            include product

        // OUR PRODUCTS
        block ourProducts
            include ourProduct

        // ACCORDION SYSTEM
        block electronicSystem
            include accordion


        // EBS block
        section(id='ebs-block', class='ebs-block', style='background: url("./image/ebs-image-bg.png") no-repeat center;')
            .ebs-block-container
                h1= ebsSlogan

        // AIM/AIS SYSTEMS
        block system
            include system

        // ATM block
        section(id='atm-block', class='atm-block', style='background: url("./image/atm-image-bg.png") no-repeat center;')
            .atm-block-container
                h1= atmSlogan

        // OUTSOURCING SERVICES
        block outsourcingServices
            include service

        // FOOTER
        footer.footer
            .footer-container
                h1 Thank God the waiting is over!
                img(src='./image/footer-logotype.png')

        // FOOTER SECTION [script..]
        include foot